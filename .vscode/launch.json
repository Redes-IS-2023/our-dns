{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Run Current File in 'api' Module",
      "type": "python",
      "request": "launch",
      "module": "api.${fileBasenameNoExtension}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Run api.main",
      "type": "python",
      "request": "launch",
      "module": "api.main",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Pytest tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["api/tests/"],
      "console": "integratedTerminal"
    }
  ]
}
